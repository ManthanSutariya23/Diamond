@model admin_labgrown.Models.TblOrder

@{
    ViewData["Title"] = "Delete";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <h1 class="card-title ml10">Delete Order</h1>
            <div class="col-md-4"></div>
            <div class="col-4 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body text-center">
                        <form asp-action="Delete" class="forms-sample">

                            <div class="mb-3">
                                <span style="font-weight: bold">User: </span>
                                <span>@Html.DisplayFor(model => model.User.FName) @Html.DisplayFor(model => model.User.LName)</span>
                            </div>

                            <div class="mb-3">
                                <span style="font-weight: bold">Diamond: </span>
                                <span>@Html.DisplayFor(model => model.Product.ShapeNavigation.ShapeName)</span>
                            </div>

                            <div class="mb-3">
                                <span style="font-weight: bold">Amount: </span>
                                <span>@Html.DisplayFor(model => model.Amount)</span>
                            </div>

                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a class="btn btn-light" asp-action="Index">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</div>

